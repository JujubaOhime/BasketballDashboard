
<section class="container p-4">
<%= search_form_for @q do |f| %>
  <div class="search-border">
    <div class="input-group">
      <%= f.search_field :name_or_city_cont, placeholder: "Pesquisar" %>
      <div class="input-group-append">
        <%= button_tag( :class => "button_green") do %>
          <i class="fa fa-search"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cidade</th>
      <th>Imagem</th>
      <th colspan="1">Ver</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.city %></td>
        <td> <%= image_tag team.wikipedia_logo_url, size: "25x25" %> </td>
        <td><%= link_to "ver", team_path(team) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>

<%= paginate @teams, window: 1, left: 1, right: 1%>